#include <iostream>
using namespace std;

void leftRotate(int arr[], int n, int d) {
    // Handle cases where d > n
    d = d % n;

    // Step 1: Store first d elements in a temporary array
    int temp[d];
    for (int i = 0; i < d; i++)
        temp[i] = arr[i];

    // Step 2: Shift the rest of the elements to the left
    for (int i = d; i < n; i++)
        arr[i - d] = arr[i];

    // Step 3: Place the stored elements at the end
    for (int i = 0; i < d; i++)
        arr[n - d + i] = temp[i];
}

int main() {
    int arr[] = {1, 2, 3, 4, 5, 6, 7};
    int n = sizeof(arr) / sizeof(arr[0]);
    int d = 2;

    leftRotate(arr, n, d);

    cout << "Array after left rotation by " << d << " places: ";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;

    return 0;
}

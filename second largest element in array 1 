#include <iostream>
using namespace std;
int getlargest (int arr[],int n)
{
    int res=0;
    for(int i=1;i<n;i++)
    {
        if(arr[i]>arr[res])
            res=i;
    }
    return res;
}
int secondlargest (int arr[],int n)
{
    int largest =getlargest (arr,n);
    int res=-1;
    for(int i=0;i<n;i++)
    {
        if(arr[i]!=arr[largest])
        {
            if(res==-1 || arr[i]>arr[res])
                res=i;
        }
    }
    return res;
}
int main()
{
    int arr[]={10,20,8,12,15};
    int n=sizeof(arr)/sizeof(arr[0]);
    int idx =secondlargest(arr,n);
    if(idx !=-1)
        cout<<"second largest element "<<arr[idx]<<endl;
    else
        cout<<"no second largest element "<<endl;
    return 0;
}

#include <iostream>
using namespace std;

int secondlargest(int arr[], int n) {
    int largest = 0;
    int second = -1;

    for (int i = 1; i < n; i++) {
        if (arr[i] > arr[largest]) {
            second = largest;
            largest = i;
        }
        else if (arr[i] != arr[largest]) {
            if (second == -1 || arr[i] > arr[second])
                second = i;
        }
    }
    return second;
}

int main() {
    int arr[] = {10, 20, 8, 12, 15};
    int n = sizeof(arr) / sizeof(arr[0]);

    int idx = secondlargest(arr, n);
    if (idx != -1)
        cout << "Second largest element: " << arr[idx] << endl;
    else
        cout << "No second largest element found" << endl;

    return 0;
}

#include <iostream>
using namespace std;
int getlargest (int arr[],int n)
{
    if(n<=0)
        return -1;
    int res=0;
    for(int i=1;i<n;i++)
        if(arr[i]>arr[res])
            res=i;
    return res;
}
int main()
{
    int arr[]={5,8,20,10};
    int n=sizeof(arr)/sizeof(arr[0]);
    int index = getlargest(arr,n);
    cout<<"largest element"<<arr[index]<<endl;
    return 0;
}
